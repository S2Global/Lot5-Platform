<div class="container">
	<h1><%= @user.name %></h1>

	<h2>Characters:</h2>

	<table class="table table-light shadow">
		<thead>
			<tr>
				<th>Name</th>
				<th>Level</th>
				<th>Race</th>
				<th>Archetype</th>
				<th>Class</th>
				<th colspan="300"></th>
			</tr>
		</thead>
		<tbody>
			<% @characters.each do |character| %>
				<tr>
					<td><%= link_to character.name, character %></td>
					<td><%= character.level %></td>
					<td><%= character.race.name %></td>
					<td><%= character.archetype.name %></td>
					<td><%= character.role %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<% if @user == current_user %>
		<td><%= link_to 'Create a Character', new_character_path(@user.id), class: "btn btn-light shadow" %></td>
	<% end %>

	<br><br>
	<h2>Worlds:</h2>

	<table class="table table-light shadow">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th colspan="300"></th>
			</tr>
		</thead>
		<tbody>
			<% @worlds.each do |world| %>
				<tr>
					<td><%= link_to world.name, world %></td>
					<td><%= world.description %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

</div>