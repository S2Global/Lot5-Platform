<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Worlds</h1>

  <table class="table table-light shadow">
    <thead>
      <tr>
        <th>Name</th>
        <th>GM</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @worlds.each do |world| %>
        <tr>
          <td><%= world.name %></td>
          <td><%= world.user.name %></td>
          <td><%= world.description %></td>
          <td><%= link_to 'Show', world %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New World', new_world_path , class: "btn btn-light shadow"%>

</div>