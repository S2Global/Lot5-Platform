<div class="container">

	<h1><strong><%= @world.name %></strong></h1>

	<h4>DM: <%= @world.user.name %></h4>

	<p>
	  <%= @world.description %>
	</p>

	<h2>Characters</h2>
	<table class="table table-light shadow">
		<thead>
			<tr>
				<th>Name</th>
				<th>Level</th>
				<th>Race</th>
				<th>Archetype</th>
				<th>Class</th>
				<th>User</th>
				<th colspan="300"></th>
			</tr>
		</thead>
		<tbody>
			<% @world_characters.each do |character| %>
				<tr>
          			<td><%= link_to character.name, character %></td>
					<td><%= character.level %></td>
					<td><%= character.race.name %></td>
					<td><%= character.archetype.name %></td>
					<td><%= character.role %></td>
					<td><%= character.user.name %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "Add Character", new_character_path(@world.id), class: "btn btn-light shadow" %>	
	<br><br>

	<h2>Sessions</h2>
	<table class="table table-light shadow">
		<thead>
			<tr>
				<th>Name</th>
				<th>Started</th>
				<th>Ended</th>
				<th>Context</th>
				<th colspan="300"></th>
			</tr>
		</thead>
		<tbody>
			<% @world_sessions.each do |session| %>
				<tr>
          			<td><%= link_to session.name, session.world_id.to_s + '/sessions/' + session.id.to_s %></td>
					<td><%= session.ongoing %></td>
					<td><%= session.ended %></td>
					<td><%= session.context %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to 'New Session', new_world_session_path(@world), class: "btn btn-light shadow" %> 
	<br><br>

	<% if @world.user == current_user %>
		<%= link_to 'Edit', edit_world_path(@world), class: "btn btn-light shadow" %> 
	<% end %>
	<%= link_to 'Back', worlds_path, class: "btn btn-light shadow" %>

</div>
