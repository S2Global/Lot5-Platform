<%= form_with(model: character, local: true) do |form| %>
  <% if character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% character.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="field">
    <%= form.label :exp %>
    <%= form.number_field :exp %>
  </div>

  <div class="field">
      <%= form.label :archetype_id %><br/>
      <%= form.collection_select :archetype_id,  Archetype.order('name ASC'), :id, :name, include_blank: false %>
  </div>

  <div class="field">
      <%= form.label :race_id %><br/>
      <%= form.collection_select :race_id,  Race.order('name ASC'), :id, :name, include_blank: false %>
  </div>

  <div class="field">
    <%= form.label :role %>
    <%= form.text_field :role %>
  </div>

  <%= form.hidden_field :gp, value: 5 %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
