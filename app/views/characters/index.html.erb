<div class="container">

  <h1>Characters</h1>

  <table class="table table-light shadow">
    <thead>
      <tr>
        <th>Name</th>
        <th>User</th>
        <th>Level</th>
        <th>Exp</th>
        <th>Arch</th>
        <th>Race</th>
        <th>Class</th>
        <th>Hp</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @characters.each do |character| %>
        <tr>
          <td><%= character.name %></td>
          <td><%= character.user.name %></td>
          <td><%= character.level %></td>
          <td><%= character.exp %></td>
          <td><%= character.archetype.name %></td>
          <td><%= character.race.name %></td>
          <td><%= character.role %></td>
          <td><%= character.hp %></td>
          <td><%= link_to 'Show', character %></td>
          <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Character', new_character_path, class: "btn btn-light shadow" %>

</div>