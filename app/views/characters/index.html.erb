<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Level</th>
      <th>Exp</th>
      <th>Arch</th>
      <th>Race</th>
      <th>Class</th>
      <th>Hp</th>
      <th>Cp</th>
      <th>Sp</th>
      <th>Gp</th>
      <th>Pp</th>
      <th>Locx</th>
      <th>Locy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.user %></td>
        <td><%= character.level %></td>
        <td><%= character.exp %></td>
        <td><%= character.arch %></td>
        <td><%= character.race %></td>
        <td><%= character.class %></td>
        <td><%= character.hp %></td>
        <td><%= character.cp %></td>
        <td><%= character.sp %></td>
        <td><%= character.gp %></td>
        <td><%= character.pp %></td>
        <td><%= character.locX %></td>
        <td><%= character.locY %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

